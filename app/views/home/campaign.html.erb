<div class="form-wrapper">
	<%= form_for @user, :url => { :controller => "home", :action => "new_campaign_user", id: @campaign.id }, method: :post do |f| %>
		<div class="form-group">
			<%= f.label :name, "Name" %>
			<%= f.text_field :name , class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<%= f.label :email, 'Email' %>
			<%= f.email_field :email, class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<%= f.label :ethereum_address, 'Ethereum Address' %>
			<%= f.text_field :ethereum_address, class: "form-control", required: true  %>
		</div>
		<div class="recaptcha">
			<%= recaptcha_tags callback: 'formSubmit' %><br><br>
		</div>
		<div class="recaptcha-submit">
			<%= f.button :Submit, type: :submit, id: "submit-detail", class: "invisible" %>
		</div>
		<img src="<%= Rails.application.routes.default_url_options[:host] %>/home/referral_url_unique_click_tracking">
	<% end %>
</div>
<script type="text/javascript">
	 document.getElementById("submit-detail").disabled = true;
</script>
